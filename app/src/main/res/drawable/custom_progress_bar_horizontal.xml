<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />
            <gradient
                android:startColor="@color/relative_trans"
                android:centerColor="@color/relative_trans"
                android:centerY="0.75"
                android:endColor="@color/relative_trans"
                android:angle="270" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient
                    android:startColor="@color/Progress_Color"
                    android:centerColor="@color/Progress_Color"
                    android:centerY="0.75"
                    android:endColor="@color/Progress_Color"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient
                    android:startColor="@color/Progress_Color"
                    android:centerColor="@color/Progress_Color"
                    android:centerY="0.75"
                    android:endColor="@color/Progress_Color"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>