<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner">

    <SeekBar
        style="@style/SeekBarAppTheme"
        android:id="@+id/audio_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:secondaryProgressTint="@color/colorPrimary" />

    <TextView
        android:id="@+id/audio_name"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_of_the_file"
        android:layout_below="@+id/audio_track"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/pause"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pause"
        android:background="@null"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/audio_track"
        android:layout_alignRight="@+id/audio_track"
        android:layout_alignEnd="@+id/audio_track"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />
</RelativeLayout>